<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_Application"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#F3FAFF"
        android:gravity="right">

        <ImageView
            android:onClick="backToSettings2"
            android:id="@+id/about_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_button"
            android:layout_marginTop="25dp"
            android:layout_marginRight="90dp"
            android:transitionName="set_back"/>

        <TextView
            android:id="@+id/about_banner"
            android:layout_width="220dp"
            android:layout_height="75dp"
            android:text="Settings"
            android:textSize="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingRight="10dp"
            android:background="@drawable/dashboard_title"
            android:transitionName="set_banner"/>

    </LinearLayout>

    <TextView
        android:id="@+id/settings_sub_about"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="About Application"
        android:paddingLeft="7dp"
        android:fontFamily="@font/ubuntu"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:background="#0090E7"/>

    <ImageView
        android:id="@+id/about_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/sb_logo_only"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/about_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Study Buddy AI"
        android:textColor="#43B0F1"
        android:fontFamily="@font/ubuntu"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/about_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="version 2.0"
        android:textColor="#43B0F1"
        android:fontFamily="@font/ubuntu"
        android:textSize="16dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/about_app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/sample_string"
        android:justificationMode="inter_word"
        android:textColor="#43B0F1"
        android:fontFamily="@font/ubuntu"
        android:textSize="16dp"
        android:layout_gravity="center"/>

</LinearLayout>